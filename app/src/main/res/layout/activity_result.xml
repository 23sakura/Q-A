<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_content_result"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="hogehoge"
        android:id="@+id/textview_notice_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/frame_listview"
        android:id="@+id/listview_care">

    </ListView>

    <Button
        android:layout_weight="1"
        android:textColor="@color/start"
        android:background="@color/start_back"
        android:id="@+id/btn_start_care"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" >

    </Button>

</LinearLayout>
